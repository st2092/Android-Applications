<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sony.madlibs" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PresentStoriesChoice"
            android:label="@string/title_activity_present_stories_choice"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sony.madlibs.MainActivity" />
        </activity>
        <activity
            android:name=".FillInActivity"
            android:label="@string/title_activity_fill_in" >
        </activity>
        <activity
            android:name=".DisplayStoryActivity"
            android:label="@string/title_activity_display_story"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sony.madlibs.MainActivity" />
        </activity>
    </application>

</manifest>
