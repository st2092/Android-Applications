<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!-- Text View for title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/title_text_view"
        android:text="Tic-Tac-Toe"
        android:textSize="40dp" />

    <!-- GridLayout view for the 9 squares of game -->
    <GridLayout
        android:id="@+id/square_grid_layout"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/title_text_view"
        android:layout_centerHorizontal="true">

        <!-- button 1 -->
        <Button
            android:id="@+id/button1"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 2 -->
        <Button
            android:id="@+id/button2"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 3 -->
        <Button
            android:id="@+id/button3"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 4 -->
        <Button
            android:id="@+id/button4"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 5 -->
        <Button
            android:id="@+id/button5"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 6 -->
        <Button
            android:id="@+id/button6"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 7 -->
        <Button
            android:id="@+id/button7"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 8 -->
        <Button
            android:id="@+id/button8"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
        <!-- button 9 -->
        <Button
            android:id="@+id/button9"
            android:text=""
            android:textAlignment="center"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="top|left"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="mark_grid"/>
    </GridLayout>

    <!-- New game button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_game_button"
        android:text="New Game"
        android:layout_below="@+id/square_grid_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:clickable="true"
        android:onClick="reset_game"/>

    <!-- Text View for winner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winner_text_view"
        android:layout_below="@+id/new_game_button"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text=""
        android:layout_marginTop="20dp"/>

</RelativeLayout>
