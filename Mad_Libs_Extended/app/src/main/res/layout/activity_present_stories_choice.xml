<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sony.madlibs.PresentStoriesChoice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:text="@string/instruction_story_choice"
        android:id="@+id/instruction_present_stories_text_view"/>

    <!-- Linear list of buttons, one for each story -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction_present_stories_text_view"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/grid_layout_present_stories_choice"
        android:rowCount="5"
        android:columnCount="1">

        <!-- Simple story button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simple_story_button"
            android:text="Simple"
            android:clickable="true"
            android:onClick="advance_to_fill_in_activity" />

        <!-- Tarzan story button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tarzan_story_button"
            android:text="Tarzan"
            android:clickable="true"
            android:onClick="advance_to_fill_in_activity" />

        <!-- University story button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/university_story_button"
            android:text="University"
            android:clickable="true"
            android:onClick="advance_to_fill_in_activity" />

        <!-- Clothes story button-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clothes_story_button"
            android:text="Clothes"
            android:clickable="true"
            android:onClick="advance_to_fill_in_activity" />

        <!-- Dance story button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dance_story_button"
            android:text="Dance"
            android:clickable="true"
            android:onClick="advance_to_fill_in_activity" />
    </GridLayout>

</RelativeLayout>
