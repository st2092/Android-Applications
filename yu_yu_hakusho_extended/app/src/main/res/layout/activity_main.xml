<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="top|center">

    <!-- Instruction Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instruction_text_view"
        android:text = "Pick a name to see an image of the character. Touch the character image to see details about the charater."
        android:textSize="14dp"
        android:layout_alignParentTop="true"/>

    <!-- Radio Buttons -->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/group1"
        android:layout_below="@+id/instruction_text_view"
        android:layout_centerHorizontal="true">

        <!-- Yusuke -->
        <RadioButton
            android:id="@+id/yusuke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yusuke"
            android:checked="false"
            android:onClick="display_char_icon"/>

        <!-- Kuwabara -->
        <RadioButton
            android:id="@+id/kuwabara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuwabara"
            android:checked="false"
            android:onClick="display_char_icon"/>
        
        <!-- Hiei -->
        <RadioButton
            android:id="@+id/hiei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiei"
            android:checked="false"
            android:onClick="display_char_icon"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/group1"
        android:layout_centerHorizontal="true">
        <!-- Kurama -->
        <RadioButton
            android:id="@+id/kurama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kurama"
            android:checked="false"
            android:onClick="display_char_icon"/>

        <!-- Keiko -->
        <RadioButton
            android:id="@+id/keiko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keiko"
            android:checked="false"
            android:onClick="display_char_icon"/>

        <!-- Botan -->
        <RadioButton
            android:id="@+id/botan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Botan"
            android:checked="false"
            android:onClick="display_char_icon"/>
    </RadioGroup>

    <!-- Character ImageButton -->
    <ImageButton
        android:id="@+id/char_image_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="display_char_info"
        android:background="@android:color/transparent"
        android:layout_below="@+id/group2"
        android:layout_centerHorizontal="true"/>

    <!-- Take photo button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/take_photo_button"
        android:text="Take Photo"
        android:clickable="true"
        android:onClick="take_photo_for_specific_character"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
